<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="580.0" prefWidth="886.0" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AlumnosController">

    <!-- Título centrado -->
    <Label style="-fx-font-size: 20;" text="Tabla de Alumnos" />

    <!-- Botones en línea -->
    <HBox spacing="10">
        <Button fx:id="btnNuevoAlumno" onAction="#btnActionNuevoAlumno" text="Nuevo Alumno" />
        <Button fx:id="btnEliminarAlumno" onAction="#btnActionEliminarAlumno" text="Eliminar Alumno" />
        <Button fx:id="btnImportar" onAction="#btnImportarAction" text="Importar">
            <tooltip>
                <Tooltip text="Desde un archivo .csv" />
            </tooltip>
        </Button>
        <Button fx:id="btnExportar" onAction="#btnExportarAction" text="Exportar">
            <tooltip>
                <Tooltip text="A un archivo .csv" />
            </tooltip>
        </Button>
    </HBox>

    <!-- Barra de búsqueda -->
    <HBox prefHeight="25.0" prefWidth="671.0" spacing="10">
        <Label text="Buscar:" />
        <TextField fx:id="txtBuscar" prefHeight="30.0" prefWidth="350.0" promptText="Escribe para buscar..." />
        <Button fx:id="btnBuscar" onAction="#btnBuscarAction" prefHeight="30.0" text="Buscar" />
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="tablaUsuarios" prefHeight="500.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCodigo" prefWidth="143.0" text="Código Alumno" />
            <TableColumn fx:id="colNombre" prefWidth="221.0" text="Nombre" />
            <TableColumn fx:id="colCurso" prefWidth="236.0" text="Curso" />
            <TableColumn fx:id="colCodigoSede" prefWidth="245.0" text="Código Sede" />
        </columns>
    </TableView>

</VBox>
