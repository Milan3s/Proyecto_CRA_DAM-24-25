<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="580.0" prefWidth="886.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AlumnosController">

    <!-- Título -->
    <Label styleClass="txt_alulmnos" text="Tabla de Alumnos" />

    <!-- Botones en línea -->
    <HBox spacing="10">
        <Button fx:id="btnNuevoAlumno" mnemonicParsing="false" onAction="#btnActionNuevoAlumno" text="Nuevo Alumno" />
        <Button fx:id="btnEliminarAlumno" mnemonicParsing="false" onAction="#btnActionEliminarAlumno" text="Eliminar Alumno" />
        <Button fx:id="btnEliminarTodos" mnemonicParsing="false" onAction="#btnActionEliminarTodos" text="Eliminar Todos" />
    </HBox>
    
    <!-- Barra de búsqueda -->
 
    <HBox spacing="10">
        <Label contentDisplay="RIGHT" prefHeight="35.0" prefWidth="60.0" text="Buscar:" textAlignment="RIGHT" />
        <TextField fx:id="txtBuscar" prefHeight="35.0" prefWidth="423.0" promptText="Escribe para buscar..." styleClass="campo_busqueda" />
        <Button fx:id="btnBuscar" onAction="#btnBuscarAction" prefHeight="35.0" text="Buscar" />
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="tablaUsuarios" prefHeight="500.0" styleClass="tabla_Alumnos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCodigo" prefWidth="143.0" styleClass="Columna-Codigo" text="Código Alumno" />
            <TableColumn fx:id="colNombre" prefWidth="221.0" styleClass="Columna-nombre" text="Nombre" />
            <TableColumn fx:id="colCurso" prefWidth="236.0" styleClass="Columna-Curso" text="Curso" />
            <TableColumn fx:id="colCodigoSede" prefWidth="235.0" styleClass="Columna-Sede" text="Código Sede" />
        </columns>
    </TableView>
</VBox>
