<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CategoriaController">
   <children>
      <!-- Título -->
      <Label text="Categorías">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <!-- Botones principales -->
      <HBox alignment="CENTER_LEFT" spacing="20.0" prefHeight="45.0">
         <children>
            <Button fx:id="btnNuevaCat" text="Nueva Categoría" onAction="#btnActionNuevaCat">
               <graphic>
                  <FontAwesomeIconView glyphName="PLUS" />
               </graphic>
            </Button>
            <Button fx:id="btnEliminarCat" text="Eliminar Categoría" onAction="#btnActionEliminarCat">
               <graphic>
                  <FontAwesomeIconView glyphName="TRASH" />
               </graphic>
            </Button>
            <Button fx:id="btnImportar" text="Importar Categoría" onAction="#btnImportarAction">
               <graphic>
                  <FontAwesomeIconView glyphName="UPLOAD" />
               </graphic>
            </Button>
            <Button fx:id="btnExportar" text="Exportar Categoría" onAction="#btnExportarAction">
               <graphic>
                  <FontAwesomeIconView glyphName="DOWNLOAD" />
               </graphic>
            </Button>
         </children>
      </HBox>

      <!-- Búsqueda -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" prefHeight="45.0">
         <children>
            <Label text="Buscar:" />
            <TextField fx:id="txtBuscar" promptText="Escribe para buscar..." prefWidth="300.0" />
            <Button fx:id="btnBuscar" text="Buscar" onAction="#btnBuscarAction">
               <graphic>
                  <FontAwesomeIconView glyphName="BINOCULARS" />
               </graphic>
            </Button>
         </children>
      </HBox>

      <!-- Tabla -->
      <TableView fx:id="tablaCat" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colCodigo" text="Código Categoría" prefWidth="150.0" />
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="673.0" />
         </columns>
      </TableView>
   </children>

   <padding>
      <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
   </padding>
</VBox>
