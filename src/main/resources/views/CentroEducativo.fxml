<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="580.0" prefWidth="886.0" spacing="10" style="-fx-padding: 20;" stylesheets="@../styles/tabla_alumnos.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CentroEducativoController">

    <!-- Título -->
    <Label styleClass="txt_alulmnos" text="Tabla de Centros Educativos" />

    <!-- Botones en línea -->
    <HBox spacing="10">
        <Button fx:id="btnNuevoCentro" mnemonicParsing="false" onAction="#btnActionNuevoCentro" styleClass="btnNuevoAlumno" text="Nuevo Centro" />
        <Button fx:id="btnEliminarCentro" mnemonicParsing="false" onAction="#btnActionEliminarCentro" styleClass="btnEliminarAlumnoSeleccionado" text="Eliminar Centro" />
        <Button fx:id="btnEliminarTodosCentros" mnemonicParsing="false" onAction="#btnActionEliminarTodosCentros" styleClass="btnEliminarTodosLosAlumnos" text="Eliminar Todos" />
    </HBox>

    <!-- Barra de búsqueda para el centro -->
    <HBox spacing="10">
        <Label contentDisplay="RIGHT" prefHeight="35.0" prefWidth="60.0" text="Buscar:" textAlignment="RIGHT" />
        <TextField fx:id="txtBuscar" prefHeight="35.0" prefWidth="423.0" promptText="Escribe para buscar..." styleClass="campo_busqueda" />
        <Button fx:id="btnBuscarCentro" onAction="#btnBuscarCentroAction" prefHeight="35.0" text="Buscar" />
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="tablaCentroEducativos" prefHeight="500.0" styleClass="tabla_Alumnos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCodigoCentro" prefWidth="100.0" text="Código Centro" />
            <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre" />
            <TableColumn fx:id="colCalle" prefWidth="150.0" text="Calle" />
            <TableColumn fx:id="colLocalidad" prefWidth="100.0" text="Localidad" />
            <TableColumn fx:id="colCP" prefWidth="80.0" text="C.P." />
            <TableColumn fx:id="colMunicipio" prefWidth="120.0" text="Municipio" />
            <TableColumn fx:id="colProvincia" prefWidth="120.0" text="Provincia" />
            <TableColumn fx:id="colTelefono" prefWidth="120.0" text="Teléfono" />
            <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
        </columns>
    </TableView>

</VBox>
