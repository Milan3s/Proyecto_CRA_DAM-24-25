<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="1080.0" prefWidth="1360.0" stylesheets="@../styles/estilos.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">

    <!-- Sidebar reutilizable -->
    <left>
        <fx:include source="Sidebar.fxml" />
    </left>

    <!-- Panel dinÃ¡mico para cargar contenido -->
    <center>
        <StackPane fx:id="panelContenido">
            <children>
                <Label fx:id="userNameLabel" style="-fx-text-fill: white; -fx-font-size: 20px;" />
            </children>
        </StackPane>
    </center>
   <top>
      <HBox fx:id="top_bar" prefHeight="25.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelUsuario" text="Nombre usuario">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="labelCentro" text="Centro activo">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
