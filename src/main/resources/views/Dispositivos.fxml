            <ComboBox fx:id="cboxPrograma" prefHeight="25.0" prefWidth="325.0" GridPane.columnIndex="4" GridPane.rowIndex="1" />
            <ComboBox fx:id="cboxProveedor" prefHeight="25.0" prefWidth="324.0" GridPane.columnIndex="7" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#btnBuscarAction" text="Buscar" />
