<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="540.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EditarAlumnoController">

    <children>

        <!-- Título centrado y negro -->
        <Text layoutX="170.0" layoutY="50.0" fill="black" text="Editar Alumno">
            <font>
                <Font size="24.0"/>
            </font>
        </Text>

        <!-- Nombre -->
        <Label layoutX="100.0" layoutY="100.0" text="Nombre:" />
        <TextField fx:id="txtNombre" layoutX="200.0" layoutY="95.0" prefWidth="220.0"/>

        <!-- Curso -->
        <Label layoutX="100.0" layoutY="150.0" text="Curso:" />
        <TextField fx:id="txtCurso" layoutX="200.0" layoutY="145.0" prefWidth="220.0"/>

        <!-- Código Sede -->
        <Label layoutX="80.0" layoutY="200.0" text="Código Sede:" />
        <ComboBox fx:id="cboxSede" layoutX="200.0" layoutY="195.0" prefWidth="220.0" promptText="Seleccione una...">
        </ComboBox>

        <!-- Botones -->
        <Button fx:id="btnGuardar" layoutX="120.0" layoutY="270.0" prefHeight="32.0" prefWidth="120.0" text="Guardar" />
        <Button fx:id="btnCancelar" layoutX="280.0" layoutY="270.0" onAction="#btnActionCancelar" prefHeight="32.0" prefWidth="120.0" text="Cancelar" />

    </children>
</AnchorPane>
